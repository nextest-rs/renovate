{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:base"
    ],
    "platform": "github",
    "packageFile": [
        "Cargo.toml"
    ],
    "repositories": [
        "nextest-rs/nextest"
    ],
    "allowedPostUpgradeCommands": [
        "^./scripts/renovate-post-upgrade.sh"
    ],
    "onboarding": false,
    "requireConfig": "optional",
    "packageRules": [
        {
            "matchUpdateTypes": [
                "patch"
            ],
            "automerge": true,
            "autoMergeType": "pr"
        },
        {
            "matchUpdateTypes": [
                "major"
            ],
            "automerge": false
        }
    ]
}
