{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:base"
    ],
    "timezone": "America/Los_Angeles",
    "packageRules": [
        {
            "matchUpdateTypes": [
                "patch"
            ],
            "automerge": true,
            "automergeSchedule": "after 10pm and before 5am"
        },
        {
            "matchUpdateTypes": [
                "minor",
                "major"
            ],
            "automerge": false
        }
    ]
}
