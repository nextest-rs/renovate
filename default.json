{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:recommended"
    ],
    "timezone": "America/Los_Angeles",
    "schedule": ["after 8pm and before 6am"],
    "automergeSchedule": ["after 8pm and before 6am"],
    "packageRules": [
        {
            "matchUpdateTypes": [
                "patch"
            ],
            "automerge": true
        },
        {
            "matchUpdateTypes": [
                "minor",
                "major"
            ],
            "automerge": false
        }
    ]
}
