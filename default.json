{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:recommended",
        "helpers:pinGitHubActionDigests"
    ],
    "timezone": "America/Los_Angeles",
    "schedule": ["after 8pm", "before 6am"],
    "automergeSchedule": ["after 8pm", "before 6am"],
    "ignorePaths": [
        "workspace-hack/**",
        "**/vendor/**"
    ],
    "addLabels": [
        "dependencies"
    ],
    "packageRules": [
        {
            "matchUpdateTypes": [
                "patch",
                "pin",
                "pinDigest"
            ],
            "automerge": true
        },
        {
            "matchUpdateTypes": [
                "minor",
                "major"
            ],
            "automerge": false
        }
    ]
}
